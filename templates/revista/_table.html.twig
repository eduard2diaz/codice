<table class="table table-hover m-table m-table--head-separator-brand" id="revista_table">
    <thead>
    <tr>
        <th>
            #
        </th>
        <th>
            Nombre
        </th>
        <th>
            Pais
        </th>
        <th>
            Nivel
        </th>
        <th>
            Impacto
        </th>
        <th>
        </th>
    </tr>
    </thead>
    <tbody>
    {%set i=1%}
    {% for revista in revistas %}
        <tr>
            <td>{{ i }}</td>
            <td>{{ revista.nombre }}</td>
            <td>{{ revista.pais.nombre }}</td>
            <td>{{ revista.nivel }}</td>
            <td>{{ revista.impacto }}</td>
            <td>
                <ul class="m-nav m-nav--inline m--pull-right">
                    <li class="m-nav__item">
                        <a class="btn btn-info btn-sm edicion" data-href="{{ path('revista_edit', { 'id': revista.id }) }}">
                            <i class="flaticon-edit-1"></i> Editar</a>
                    </li>
                    <li class="m-nav__item">
                        <a class="btn btn-danger btn-sm  eliminar_revista" data-href="{{ path('revista_delete', { 'id': revista.id }) }}">
                            <i class="flaticon-delete-1"></i> Eliminar</a>
                    </li>
                </ul>
            </td>
        </tr>
        {%set i=1+i%}
    {% endfor %}
    </tbody>
    <tfoot>
    <tr>
        <th>
            #
        </th>
        <th>
            Nombre
        </th>
        <th>
            Pais
        </th>
        <th>
            Nivel
        </th>
        <th>
            Impacto
        </th>
        <th>
        </th>
    </tr>
    </tfoot>
</table>
