<!DOCTYPE html>
<html>
<head>
    <title>Resumen de publicaciones</title>
    <meta charset="UTF-8"/>
    <style>
        body{
            padding: 3%;
        }
        div.header{
            text-align: center;
            color: gray;
            margin-bottom: 4%;
        }
        div.header h3{
            margin-bottom: 0.4%;
        }
        table{
            width: 100% !important;
        }
        table td, th{
            padding: .75rem;
            border-top: 1px solid #f4f5f8;
            text-align: center;
        }
    </style>
</head>
<body>
<div class="header">
    <h3>Publicaciones de {{ autor }}</h3>
    <span>Periodo: {{ finicio | date('d-m-Y') }} - {{ ffin | date('d-m-Y') }}</span>
</div>
{% if esDirectivo==true %}
    <table class="table m-table m-table m-table--head-separator-primary">
        <thead>
        <tr>
            <th>
                Tipo de publicación
            </th>
            <th>
                Total
            </th>

            <th>
                Propio
            </th>

            <th>
                Porciento
            </th>
        </tr>
        </thead>
        <tbody>
        {% for obj in resumen %}
            <tr>
                <td>{{ obj['entidad'] }}</td>
                <td>{{ obj['total'] }}</td>
                <td>{{ obj['propio'] }}</td>
                <td>{{ obj['total']==0 ? 0 : obj['propio']/total*100 }}%</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">No existen publicaciones en el período</td>
            </tr>
        {% endfor %}
        </tbody>
        <tfoot>
        <tr>
            <th>
                Tipo de publicación
            </th>
            <th>
                Total
            </th>
            <th>
                Propio
            </th>
            <th>
                Porciento
            </th>
        </tr>
        </tfoot>
    </table>
{% else %}
    <table class="table m-table m-table m-table--head-separator-primary">
        <thead>
        <tr>
            <th>
                Tipo de publicación
            </th>
            <th>
                Total
            </th>
            <th>
                Porciento
            </th>
        </tr>
        </thead>
        <tbody>
        {% for obj in resumen %}
            <tr>
                <td>{{ obj['entidad'] }}</td>
                <td>{{ obj['total'] }}</td>
                <td>{{ obj['total']==0 ? 0 : obj['total']/total*100 }}%</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">No existen publicaciones en el período</td>
            </tr>
        {% endfor %}
        </tbody>
        <tfoot>
        <tr>
            <th>
                Tipo de publicación
            </th>
            <th>
                Total
            </th>
            <th>
                Porciento
            </th>
        </tr>
        </tfoot>
    </table>
{% endif %}

</body>
</html>
