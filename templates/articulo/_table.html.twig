<table class="table table-hover m-table m-table--head-separator-brand" id="articulo_table">
    <thead>
    <tr>
        <th style="width: 10%">
            #
        </th>
        <th>
            Título
        </th>
        <th style="width: 10%">
            Fecha
        </th>
        <th>
        </th>
    </tr>
    </thead>
    <tbody>
    {%set i=1%}
    {% for articulo in articulos %}
        <tr>
            <td>{{ i }}</td>
            <td>{{ articulo.id.titulo }}</td>
            <td>{{ articulo.id.fechaCaptacion|date('d-m-Y') }}</td>
            <td>
                <ul class="m-nav m-nav--inline m--pull-right">
                    <li class="m-nav__item">
                        <a class="btn btn-secondary btn-sm" href="{{ path('articulo_show', { 'id': articulo.id.id }) }}">
                            <i class="flaticon-eye"></i> Visualizar</a>
                    </li>
                    {% if esGestor==true %}
                    <li class="m-nav__item">
                        <a class="btn btn-info btn-sm" href="{{ path('articulo_edit', { 'id': articulo.id.id }) }}">
                            <i class="flaticon-edit-1"></i> Editar</a>
                    </li>
                    <li class="m-nav__item">
                        <a class="btn btn-danger btn-sm  eliminar_articulo" data-href="{{ path('articulo_delete', { 'id': articulo.id.id }) }}" data-csrf="{{ csrf_token('delete' ~ articulo.id.id) }}">
                            <i class="flaticon-delete-1"></i> Eliminar</a>
                    </li>
                    {% endif %}
                </ul>
            </td>
        </tr>
        {%set i=1+i%}
    {% endfor %}
    </tbody>
    <tfoot>
    <tr>
        <th>
            #
        </th>
        <th>
            Título
        </th>
        <th>
            Fecha
        </th>
        <th>
        </th>
    </tr>
    </tfoot>
</table>
