{{ form_start(form,{'attr':{
    'id': form_id|default('balance_new'),
    'class': 'm-form m-form--state'
}}) }}
<div class="modal-body" id="modal-body">
    <div class="row">
        <div class="col-md-6">
            <div class="form-group m-form__group">
                <label>
                    {{ form_label(form.nombre) }}
                </label>
                <div>
                    {{ form_widget(form.nombre) }}
                    {{ form_errors(form.nombre) }}
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group m-form__group">
                <label>
                    {{ form_label(form.fecha) }}
                </label>
                <div>
                    {{ form_widget(form.fecha) }}
                    {{ form_errors(form.fecha) }}
                </div>
            </div>
        </div>
    </div>
    {% if form.file is defined %}
        <div class="row m--margin-top-20">
            <div class="col-md-12">
                <div class="form-group m-form__group">
                    <label>
                        {{ form_label(form.file) }}
                    </label>
                    <div>
                        {{ form_widget(form.file) }}
                        {{ form_errors(form.file) }}
                    </div>
                </div>
            </div>
        </div>
        <button type="button" class="btn btn-primary btn-sm" id="balance_file"><i class="la la-cloud-upload"></i> Cargar archivo</button>
        <span class="custom-file-control"></span>
    {% endif %}
    <div class="row m--margin-top-20">
        <div class="col-md-12">
            <div class="form-group m-form__group">
                <label>
                    {{ form_label(form.descripcion) }}
                </label>
                <div>
                    {{ form_widget(form.descripcion) }}
                    {{ form_errors(form.descripcion) }}
                </div>
            </div>
        </div>
    </div>
    {{ form_errors(form) }}
</div>
<div class="modal-footer">
    <a class="btn btn-sm btn-metal" data-dismiss="modal"><i class="flaticon-cancel"></i> Cancelar</a>
    <button class="btn btn-sm btn-primary mt-ladda-btn ladda-button" data-style="expand-right" type="submit">
        <i class="flaticon-edit"></i>
        <span class="ladda-label">{{ action |default('Guardar') }}</span>
        <span class="ladda-spinner"></span>
    </button>
</div>
{{ form_rest(form) }}
{{ form_end(form) }}
