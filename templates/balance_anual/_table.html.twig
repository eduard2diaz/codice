<table class="table table-hover m-table m-table--head-separator-brand" id="balance_table">
    <thead>
    <tr>
        <th>
            #
        </th>
        <th>
            Nombre
        </th>
        <th>
            Usuario
        </th>
        <th>
            
        </th>
    </tr>
    </thead>
    <tbody>
    {% set i=1 %}
    {% for balance in balances %}
        <tr>
            <td>{{ i }}</td>
            <td>{{ balance.nombre }}</td>
            <td>{{ balance.usuario }}</td>
            <td>
                <ul class="m-nav m-nav--inline m--pull-right">
                    <li class="m-nav__item">
                        <a class="btn btn-secondary btn-sm balance_show"
                           data-href="{{ path('balance_anual_show', { 'id': balance.id }) }}">
                            <i class="flaticon-eye"></i> Visualizar</a>
                    </li>
                    <li class="m-nav__item">
                        <a class="btn btn-info btn-sm edicion" data-href="{{ path('balance_anual_edit', { 'id': balance.id }) }}">
                            <i class="flaticon-edit-1"></i> Editar</a>
                    </li>
                    <li class="m-nav__item">
                        <a class="btn btn-danger btn-sm  eliminar_balance"
                           data-href="{{ path('balance_anual_delete', { 'id': balance.id }) }}">
                            <i class="flaticon-delete-1"></i> Eliminar</a>
                    </li>
                </ul>
            </td>
        </tr>
        {% set i=1+i %}
    {% endfor %}
    </tbody>
    <tfoot>
    <tr>
        <th>
            #
        </th>
        <th>
            Nombre
        </th>
        <th>
            Usuario
        </th>
        <th>

        </th>
    </tr>
    </tfoot>
</table>
