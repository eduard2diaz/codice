<table class="table table-hover m-table m-table--head-separator-brand" id="usuario_table">
    <thead>
    <tr>
        <th>
            #
        </th>
        <th>
            Nombre
        </th>
        <th>
            Correo
        </th>
        <th>
            Activo
        </th>
        <th>
        </th>
    </tr>
    </thead>
    <tbody>
    {%set i=1%}
    {% for usuario in usuarios %}
        <tr>
            <td>{{ i }}</td>
            <td>{{ usuario.nombre }}</td>
            <td>{{ usuario.email }}</td>
            <td><span class="m-badge m-badge--{{ usuario.activo ? 'success' : 'danger'}} m-badge--wide">{{ usuario.activo ? 'SI' : 'NO'}}</span></td>
            <td>
                <ul class="m-nav m-nav--inline m--pull-right">
                    <li class="m-nav__item">
                        <a class="btn btn-secondary btn-sm usuario_show" data-href="{{ path('usuario_show', { 'id': usuario.id }) }}">
                            <i class="flaticon-eye"></i> Visualizar</a>
                    </li>
                    <li class="m-nav__item">
                        <a class="btn btn-info btn-sm edicion" data-href="{{ path('usuario_edit', { 'id': usuario.id }) }}">
                            <i class="flaticon-edit-1"></i> Editar</a>
                    </li>
                    {% if app.user.id!=usuario.id %}
                    <li class="m-nav__item">
                        <a class="btn btn-danger btn-sm  eliminar_usuario" data-href="{{ path('usuario_delete', { 'id': usuario.id }) }}" data-csrf="{{ csrf_token('delete' ~ usuario.id) }}">
                            <i class="flaticon-delete-1"></i> Eliminar</a>
                    </li>
                    {% endif %}
                </ul>
            </td>
        </tr>
        {%set i=1+i%}
    {% endfor %}
    </tbody>
    <tfoot>
    <tr>
        <th>
            #
        </th>
        <th>
            Nombre
        </th>
        <th>
            Correo
        </th>
        <th>
            Activo
        </th>
        <th>
        </th>
    </tr>
    </tfoot>
</table>
