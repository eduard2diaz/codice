{{ form_start(form,{'attr':{
    'id': form_id|default('usuario_new'),
    'class':'m-form m-form--fit m-form--label-align-right'
}}) }}
<div class="modal-body" id="modal-body">
    <div class="row">
        <div class="col-lg-3">
            <div class="m-card-profile">
                <div class="m-card-profile__title m--hide">
                    Your Profile
                </div>
                <div class="m-card-profile__pic">
                    <div class="m-card-profile__pic-wrapper">

                        {% if usuario.rutaFoto!=null %}
                            {% set rutaFoto=  asset('archivos/'~usuario.rutaFoto) %}
                        {% else %}
                            {% set rutaFoto= asset('app/media/img/users/user4.jpg','template') %}
                        {% endif %}

                        <img src="{{ rutaFoto }}" alt="No se pudo cargar la imagen" id="foto_perfil"
                             data-image="{{ rutaFoto }}" data-toggle="m-tooltip" data-placement="top"
                             title="" data-original-title="Cambiar foto de perfil"/>

                    </div>
                    {{ form_widget(form.file) }}
                    {{ form_errors(form.file) }}
                </div>
                <div class="m-card-profile__details">
                    <a id="reload_picture"
                       class="btn m-btn btn-sm btn-danger text-uppercase m--font-bold m--hidden-desktop"><i
                                class="flaticon-delete-1"></i> Desechar</a>
                </div>
            </div>

        </div>
        <div class="col-lg-9">
            {% if form.activo is defined %}
                <div class="row pull-right m--margin-right-10">
                            <span class="m-switch m-switch--icon m-switch--success pull-right">
				                <label>
					                {{ form_widget(form.activo) }}
                                    <span>
                                    </span>
			                    </label>
                            </span>
                </div>
            {% endif %}
            <div class="clearfix"></div>
            <div class="form-group m-form__group row">
                <label for="example-text-input"
                       class="col-3 col-form-label">{{ form_label(form.nombre) }}</label>
                <div class="col-7">
                    {{ form_widget(form.nombre) }}
                    {{ form_errors(form.nombre) }}
                </div>
            </div>
            <div class="form-group m-form__group row">
                <label for="example-text-input"
                       class="col-3 col-form-label">{{ form_label(form.usuario) }}</label>
                <div class="col-7">
                    {{ form_widget(form.usuario) }}
                    {{ form_errors(form.usuario) }}
                </div>
            </div>
            <div class="form-group m-form__group row">
                <label for="example-text-input"
                       class="col-3 col-form-label">{{ form_label(form.email) }}</label>
                <div class="col-7">
                    {{ form_widget(form.email) }}
                    {{ form_errors(form.email) }}
                </div>
            </div>


            <div class="form-group m-form__group row">
                <label for="example-text-input"
                       class="col-3 col-form-label">{{ form_label(form.password.first) }}</label>
                <div class="col-7">
                    {{ form_widget(form.password.first) }}
                    {{ form_errors(form.password.first) }}
                </div>
            </div>
            <div class="form-group m-form__group row">
                <label for="example-text-input"
                       class="col-3 col-form-label">{{ form_label(form.password.second) }}</label>
                <div class="col-7">
                    {{ form_widget(form.password.second) }}
                    {{ form_errors(form.password.second) }}
                </div>
            </div>

        </div>
    </div>
    {{ form_errors(form) }}
    {{ form_rest(form) }}
</div>
<div class="modal-footer">
    <button class="btn btn-sm btn-primary mt-ladda-btn ladda-button" data-style="expand-right" type="submit">
        <i class="flaticon-edit"></i>
        <span class="ladda-label">{{ button_action |default('Guardar') }}</span>
        <span class="ladda-spinner"></span>
    </button>
    <button type="reset" class="btn btn-metal btn-sm" data-dismiss="modal"><i
                class="flaticon-cancel"></i> Cancelar
    </button>
</div>
{{ form_end(form) }}


