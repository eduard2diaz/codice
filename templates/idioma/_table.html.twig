<table class="table table-hover m-table m-table--head-separator-brand" id="idioma_table">
    <thead>
    <tr>
        <th>
            #
        </th>
        <th>
            Nombre
        </th>
        <th>
        </th>
    </tr>
    </thead>
    <tbody>
    {%set i=1%}
    {% for idioma in idiomas %}
        <tr>
            <td>{{ i }}</td>
            <td>{{ idioma.nombre }}</td>
            <td>
                <ul class="m-nav m-nav--inline m--pull-right">
                    <li class="m-nav__item">
                        <a class="btn btn-info btn-sm edicion" data-href="{{ path('idioma_edit', { 'id': idioma.id }) }}">
                            <i class="flaticon-edit-1"></i> Editar</a>
                    </li>
                </ul>
            </td>
        </tr>
        {%set i=1+i%}
    {% endfor %}
    </tbody>
    <tfoot>
    <tr>
        <th>
            #
        </th>
        <th>
            Nombre
        </th>
        <th>
        </th>
    </tr>
    </tfoot>
</table>
