{{form_start(form,{'attr':{
    'id': form_id|default('area_new'),
    'class': 'm-form m-form--state'
}})}}
<div class="modal-body" id="modal-body">
    {% if is_granted('ROLE_SUPERADMIN') %}
    <div class="row">
        <div class="col-md-6">
            <div class="form-group m-form__group">
                <label>
                    {{ form_label(form.pais) }}
                </label>
                <div>
                    {{ form_widget(form.pais) }}
                    {{ form_errors(form.pais) }}
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group m-form__group">
                <label>
                    {{ form_label(form.ministerio) }}
                </label>
                <div>
                    {{ form_widget(form.ministerio) }}
                    {{ form_errors(form.ministerio) }}
                </div>
            </div>
        </div>
    </div>
    <div class="row m--margin-top-20">
        <div class="col-md-6">
            <div class="form-group m-form__group">
                <label>
                    {{ form_label(form.institucion) }}
                </label>
                <div>
                    {{ form_widget(form.institucion) }}
                    {{ form_errors(form.institucion) }}
                </div>
            </div>
        </div>
    </div>
    {% endif %}
    <div class="row m--margin-top-20">
        <div class="col-md-6">
            <div class="form-group m-form__group">
                <label>
                    {{ form_label(form.nombre) }}
                </label>
                <div>
                    {{ form_widget(form.nombre) }}
                    {{ form_errors(form.nombre) }}
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group m-form__group">
                <label>
                    {{ form_label(form.padre) }}
                </label>
                <div>
                    {{ form_widget(form.padre) }}
                    {{ form_errors(form.padre) }}
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal-footer">
    <a class="btn btn-sm btn-metal" data-dismiss="modal"><i class="flaticon-cancel"></i> Cancelar</a>
    <button class="btn btn-sm btn-primary mt-ladda-btn ladda-button" data-style="expand-right" type="submit">
        <i class="flaticon-edit"></i>
        <span class="ladda-label">{{ action |default('Guardar')}}</span>
        <span class="ladda-spinner"></span>
    </button>
</div>
{{form_end(form)}}