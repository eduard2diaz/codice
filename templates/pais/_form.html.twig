{{ form_start(form,{'attr':{
    'id': form_id|default('pais_new'),
    'class': 'm-form m-form--state'
}}) }}
<div class="modal-body" id="modal-body">
    <div class="form-group m-form__group">
        <label>
            {{ form_label(form.nombre) }}
        </label>
        <div>
            {{ form_widget(form.nombre) }}
            {{ form_errors(form.nombre) }}
        </div>
    </div>
    <div class="form-group m-form__group">
        <label>
            {{ form_label(form.capital) }}
        </label>
        <div class="m-input-icon m-input-icon--left">
            <span class="m-input-icon__icon m-input-icon__icon--left"><span><i class="la la-globe"></i></span></span>
            {{ form_widget(form.capital) }}
            {{ form_errors(form.capital) }}
        </div>
    </div>
    <div class="form-group m-form__group">
        <label>
            {{ form_label(form.codigo) }}
        </label>
        <div class="m-input-icon m-input-icon--left">
            <span class="m-input-icon__icon m-input-icon__icon--left"><span><i class="la la-phone"></i></span></span>
            {{ form_widget(form.codigo) }}
            {{ form_errors(form.codigo) }}
        </div>
    </div>
</div>
<div class="modal-footer">
    <a class="btn btn-sm btn-metal" data-dismiss="modal"><i class="flaticon-cancel"></i> Cancelar</a>
    {% if eliminable is defined and eliminable==true %}
        <a class="btn btn-danger btn-sm  eliminar_pais" data-href="{{ path('pais_delete', { 'id': pais.id }) }}"
           data-csrf="{{ csrf_token('delete' ~ pais.id) }}">
            <i class="flaticon-delete-1"></i> Eliminar</a>
    {% endif %}
    <button class="btn btn-sm btn-primary mt-ladda-btn ladda-button" data-style="expand-right" type="submit">
        <i class="flaticon-edit"></i>
        <span class="ladda-label">{{ action |default('Guardar') }}</span>
        <span class="ladda-spinner"></span>
    </button>
</div>
{{ form_end(form) }}