<table class="table table-hover m-table m-table--head-separator-brand" id="ministerio_table">
    <thead>
    <tr>
        <th>
            #
        </th>
        <th>
            Nombre
        </th>
        <th>
            País
        </th>
        <th>
        </th>
    </tr>
    </thead>
    <tbody>
    {%set i=1%}
    {% for ministerio in ministerios %}
        <tr>
            <td>{{ i }}</td>
            <td>{{ ministerio.nombre }}</td>
            <td>{{ ministerio.pais }}</td>
            <td>
                <ul class="m-nav m-nav--inline m--pull-right">
                    <li class="m-nav__item">
                        <a class="btn btn-info btn-sm edicion" data-href="{{ path('ministerio_edit', { 'id': ministerio.id }) }}">
                            <i class="flaticon-edit-1"></i> Editar</a>
                    </li>
                    <li class="m-nav__item">
                        <a class="btn btn-danger btn-sm  eliminar_ministerio" data-href="{{ path('ministerio_delete', { 'id': ministerio.id }) }}" data-csrf="{{ csrf_token('delete' ~ ministerio.id) }}">
                            <i class="flaticon-delete-1"></i> Eliminar</a>
                    </li>
                </ul>
            </td>
        </tr>
        {%set i=1+i%}
    {% endfor %}
    </tbody>
    <tfoot>
    <tr>
        <th>
            #
        </th>
        <th>
            Nombre
        </th>
        <th>
            País
        </th>
        <th>
        </th>
    </tr>
    </tfoot>
</table>
