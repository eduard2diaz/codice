<table class="table table-hover m-table m-table--head-separator-brand" id="tipo_articulo_table">
    <thead>
    <tr>
        <th>
            #
        </th>
        <th>
            Nombre
        </th>
        <th>
            Grupo
        </th>
        <th>
        </th>
    </tr>
    </thead>
    <tbody>
    {%set i=1%}
    {% for tipoarticulo in tipo_articulos %}
        <tr>
            <td>{{ i }}</td>
            <td>{{ tipoarticulo.nombre }}</td>
            <td>{{ tipoarticulo.grupo.nombre }}</td>
            <td>
                <ul class="m-nav m-nav--inline m--pull-right">
                    <li class="m-nav__item">
                        <a class="btn btn-info btn-sm edicion" data-href="{{ path('tipo_articulo_edit', { 'id': tipoarticulo.id }) }}">
                            <i class="flaticon-edit-1"></i> Editar</a>
                    </li>
                    <li class="m-nav__item">
                        <a class="btn btn-danger btn-sm  eliminar_tipo_articulo" data-href="{{ path('tipo_articulo_delete', { 'id': tipoarticulo.id }) }}">
                            <i class="flaticon-delete-1"></i> Eliminar</a>
                    </li>
                </ul>
            </td>
        </tr>
        {%set i=1+i%}
    {% endfor %}
    </tbody>
    <tfoot>
    <tr>
        <th>
            #
        </th>
        <th>
            Nombre
        </th>
        <th>
            Grupo
        </th>
        <th>
        </th>
    </tr>
    </tfoot>
</table>
