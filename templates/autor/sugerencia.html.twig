<div class="m-widget4">
    {% for autor in datos %}
        {% if autor['rutaFoto']!=null %}
            {% set rutaFoto=  asset('archivos/'~autor['rutaFoto']) %}
        {% else %}
            {% set rutaFoto= asset('app/media/img/users/user4.jpg','template') %}
        {% endif %}
        <div class="m-widget4__item">
            <div class="m-widget4__img m-widget4__img--logo">
                <a href="{{ path('autor_show',{'id':autor['id']}) }}">
                    <img src="{{ rutaFoto }}" alt="">
                </a>
            </div>
            <div class="m-widget4__info">
                <span class="m-widget4__title"><a
                            href="{{ path('autor_show',{'id':autor['id']}) }}">{{ autor['nombre'] }}</a></span><br/>
                <span class="m-widget4__sub">
				    {{ autor['institucion'] }}
				</span>
            </div>
        </div>
        {% else %}
        No existen autores para sugerir
    {% endfor %}
</div>