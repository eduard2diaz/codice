<table class="table table-hover m-table m-table--head-separator-brand" id="autor_table">
    <thead>
    <tr>
        <th>
            #
        </th>
        <th>
            Nombre
        </th>
        <th>
            País
        </th>
        <th>
            Centro de trabajo
        </th>
        <th>
        </th>
    </tr>
    </thead>
    <tbody>
    {%set i=1%}
    {% for autor in autors %}
        <tr>
            <td>{{ i }}</td>
            <td>{{ autor.nombre }}</td>
            <td>{{ autor.pais }}</td>
            <td>{{ autor.institucion }}</td>
            <td>
                <ul class="m-nav m-nav--inline m--pull-right">
                    <li class="m-nav__item">
                        <a class="btn btn-secondary btn-sm" href="{{ path('autor_show', { 'id': autor.id }) }}">
                            <i class="flaticon-eye"></i> Ver</a>
                    </li>
                    <li class="m-nav__item">
                        <a class="btn btn-info btn-sm" href="{{ path('autor_edit', { 'id': autor.id }) }}">
                            <i class="flaticon-edit-1"></i> Editar</a>
                    </li>
                    {% if app.user.id!=autor.id %}
                    <li class="m-nav__item">
                        <a class="btn btn-danger btn-sm  eliminar_autor" data-href="{{ path('autor_delete', { 'id': autor.id }) }}">
                            <i class="flaticon-delete-1"></i> Eliminar</a>
                    </li>
                    {% endif %}
                </ul>
            </td>
        </tr>
        {%set i=1+i%}
    {% endfor %}
    </tbody>
    <tfoot>
    <tr>
        <th>
            #
        </th>
        <th>
            Nombre
        </th>

        <th>
            País
        </th>
        <th>
            Centro de trabajo
        </th>
        <th>
        </th>
    </tr>
    </tfoot>
</table>
